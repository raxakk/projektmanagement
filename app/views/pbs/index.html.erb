<p id="notice"><%= notice %></p>

<h1>Product Breakdown Structure</h1>

<table class="table">
  <thead>
  <tr>
    <th class="btn-success" width="100">Produkt</th>
    <th class="btn-info" width="100">Teilprodukt</th>
    <th class="btn-warning" width="100">Modul</th>
    <th class="btn-danger" width="100">Teilmodul</th>
    <th class="btn-default" width="100">Komponente</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @pbs.each do |pb| %>
      <tr>
        <% if pb.l1 && pb.l2 && pb.l3 && pb.l4 %>
            <td></td>
            <td></td>
            <td></td>
            <td class="btn-default"><%= pb.l1.to_s + '.' + pb.l2.to_s + '.' + pb.l3.to_s + '.' + pb.l4.to_s%></td>
            <td class="btn-default"><%= link_to pb.name, pb %></td>
        <%else %>
            <% if pb.l1 && pb.l2 && pb.l3%>
                <td></td>
                <td></td>
                <td class="btn-danger"><%= pb.l1.to_s + '.' + pb.l2.to_s + '.' + pb.l3.to_s %></td>
                <td class="btn-danger"><%= link_to pb.name, pb %></td>
            <% else %>
                <% if pb.l1 && pb.l2 %>
                    <td></td>
                    <td class="btn-warning"><%= pb.l1.to_s + '.' + pb.l2.to_s %></td>
                    <td class="btn-warning"><%= link_to pb.name, pb %></td>
                <% else %>
                    <% if pb.l1 %>
                        <td class="btn-info"><%= pb.l1 %></td>
                        <td class="btn-info"><%= link_to pb.name, pb %></td>
                    <% else %>
                        <td class="btn-success"><%= link_to pb.name, pb %></td>
                    <% end %>
                <% end %>
            <% end %>
        <% end %>
        <% if pb.ebene == 0 %>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td><%= link_to 'Teilprodukt hinzuf端gen', new_teilprodukt_path(id: pb.id) %></td>
        <% else if pb.ebene == 1 %>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td><%= link_to 'Modul hinzuf端gen', new_modul_path(id: pb.id) %></td>
            <% else if pb.ebene == 2 %>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><%= link_to 'Teilmodul hinzuf端gen', new_teilmodul_path(id: pb.id) %></td>
                <% else if pb.ebene == 3 %>
                        <td></td>
                        <td></td>
                        <td><%= link_to 'Komponente hinzuf端gen', new_komponente_path(id: pb.id) %></td>
                    <% end %>
                <% end %>
            <%end%>
        <%end%>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neues Produkt anlegen', new_pb_path %>
