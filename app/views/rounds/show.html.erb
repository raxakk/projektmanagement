<p id="notice"><%= notice %></p>

<p>
  <strong>Runde:</strong>
  <%= @round.count %>
</p>

<table class="table">
  <thead>
  <tr>
    <th>Optimistische Schätzung</th>
    <th>Pessimistische Schätzung</th>
    <th>Realistische Schätzung</th>
    <th>Mitarbeiter</th>
    <th>Runde</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @round.forms.each do |form| %>
      <tr>
        <td><%= form.opt %></td>
        <td><%= form.pes %></td>
        <td><%= form.real %></td>
        <td><%= form.worker.name if !form.worker.nil? %></td>
        <td><%= form.round.count %></td>
        <td><%= link_to 'Bearbeiten', edit_form_path(form) %></td>
        <td><%= link_to 'Löschen', form, method: :delete, data: { confirm: 'Sind Sie sicher?' } %></td>
      </tr>
  <% end %>
  <tr>
    <td><b>&empty; Optimistische Schätzung</b></td>
    <td><b>&empty; Pessimistische Schätzung</b></td>
    <td><b>&empty; Realistische Schätzung</b></td>
  </tr>
  <tr>
    <td><%= @avg_opt %></td>
    <td><%= @avg_pes %></td>
    <td><%= @avg_real %></td>
  </tr>
  <tr>
    <td><%= %></td>
    <td><%= %></td>
    <td><%= %></td>
  </tr>
  </tbody>
</table>

<%= link_to 'Zurück', rounds_path %>
