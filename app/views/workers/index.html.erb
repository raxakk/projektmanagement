<p id="notice"><%= notice %></p>

<h1>Mitarbeiterverwaltung</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= link_to 'Bearbeiten', edit_worker_path(worker) %></td>
        <td><%= link_to 'Löschen', worker, method: :delete, data: { confirm: 'Sind Sie sicher?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Mitarbeiter hinzufügen', new_worker_path, class: 'btn btn-success', method: :get %>
